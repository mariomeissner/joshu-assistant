{
    "manifest_version": 3,
    "name": "Ask Joshu Badge Injector",
    "version": "1.0",
    "description": "Injects Ask Joshu badge into message actions.",
    "permissions": [
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ]
}